{
  "version": 2,
  "buildCommand": "cd frontend && npm ci --prefer-offline --no-audit --silent && npm run build:prod",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm ci --prefer-offline --no-audit",
  "framework": null,
  "functions": {
    "frontend/dist/**": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
