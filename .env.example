# Environment Configuration for Resume Builder
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=development
DEBUG=true
PORT=8000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# MongoDB connection string
MONGODB_URL=mongodb://${MONGODB_ROOT_USERNAME}:${MONGODB_ROOT_PASSWORD}@localhost:27017/resume_builder?authSource=admin
DATABASE_NAME=resume_builder
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Redis connection (for caching and rate limiting)
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD_HERE

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# JWT secret key - MUST BE CHANGED IN PRODUCTION!
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_RANDOM_SECRET_KEY_HERE

# JWT algorithm
ALGORITHM=HS256

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# AI SERVICE API KEYS
# ============================================================================
# OpenAI API Key (required for resume processing)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini API Key (optional alternative)
GEMINI_API_KEY=your_gemini_api_key_here

# Groq API Key (optional alternative)
GROQ_API_KEY=your_groq_api_key_here

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
# API base URL for frontend
VITE_API_BASE_URL=http://localhost:8000

# ============================================================================
# GOOGLE OAUTH (Optional)
# ============================================================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=pdf,docx,txt

# Upload directory path
UPLOAD_DIR=uploads

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# ============================================================================
# RATE LIMITING
# ============================================================================
# Rate limit for authentication endpoints (requests per minute)
AUTH_RATE_LIMIT=5

# Rate limit for file upload endpoints (requests per minute)
UPLOAD_RATE_LIMIT=10

# Rate limit for AI processing endpoints (requests per hour)
AI_RATE_LIMIT=20

# ============================================================================
# EMAIL CONFIGURATION (Optional - for future features)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@resumebuilder.com

# ============================================================================
# MONITORING & OBSERVABILITY (Optional)
# ============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Application insights key
APPINSIGHTS_INSTRUMENTATIONKEY=your_app_insights_key_here

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
# Set to true in production
PRODUCTION=false

# SSL settings for production
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Database connection pool settings
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=20

# ============================================================================
# DOCKER COMPOSE OVERRIDES
# ============================================================================
# These are used by docker-compose.yml
COMPOSE_PROJECT_NAME=resume-builder
COMPOSE_FILE=docker-compose.yml